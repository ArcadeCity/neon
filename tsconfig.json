{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "target": "esnext",
    "lib": ["esnext"],
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "i18n": ["src/i18n"],
      "i18n/*": ["src/i18n/*"],
      "lib": ["src/lib"],
      "lib/*": ["src/lib/*"],
      "stores/*": ["src/stores/*"],
      "stores": ["src/stores"],
      "navigation": ["src/navigation"],
      "services/*": ["src/services/*"],
      "storybook": ["storybook"],
      "storybook/*": ["storybook/*"],
      "views/*": ["src/views/*"]
    }
  },
  "include": ["App.tsx", "src", "screens"],
  "exclude": ["node_modules"]
}
